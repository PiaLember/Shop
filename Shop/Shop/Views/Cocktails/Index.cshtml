                            }
                            @if (!string.IsNullOrEmpty(cocktail.strIngredient15))
                            {
                                <tr><td>@cocktail.strIngredient15</td><td>@(string.IsNullOrEmpty(cocktail.strMeasure15) ? "-" : cocktail.strMeasure15)</td></tr>
                            }
                        </tbody>
                    </table>

                    <p><strong>Instructions:</strong> @cocktail.strInstructions</p>
                </div>
            </div>
            <hr />
        }
    }
    else
    {
        <p>No results found for your search.</p>
    }
</div>
