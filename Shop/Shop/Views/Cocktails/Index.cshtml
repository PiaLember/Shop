@model List<Shop.Models.Cocktails.CocktailsViewModel>


<div class="container" style="width: 80%">
    <h1>Search for a Cocktail</h1>

    <form asp-action="Index" method="get">
        <div class="form-group">
            <input type="text" name="SearchCoctail" class="form-control" placeholder="Enter cocktail name" />
        </div>
        <button type="submit" class="btn button-details">Search</button>
    </form>

    @if (Model != null && Model.Any())
    {
        foreach (var cocktail in Model)
        {
            <div class="row">
                <h2>@cocktail.strDrink</h2>
                <div class="col-lg">
                    <img src="@cocktail.strDrinkThumb" alt="@cocktail.strDrink" class="img-fluid" />
                </div>

                <div class="col">
                    <p><strong>Category:</strong> @cocktail.strCategory</p>
                    <p><strong>Glass:</strong> @cocktail.strGlass</p>
                    <p><strong>Ingredients & Measures:</strong></p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ingredient</th>
                                <th>Measure</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!string.IsNullOrEmpty(cocktail.strIngredient1))
                            {
                                <tr><td>@cocktail.strIngredient1</td><td>@(string.IsNullOrEmpty(cocktail.strMeasure1) ? "-" : cocktail.strMeasure1)</td></tr>
                            }
                            @if (!string.IsNullOrEmpty(cocktail.strIngredient2))
                            {
                                <tr><td>@cocktail.strIngredient2</td><td>@(string.IsNullOrEmpty(cocktail.strMeasure2) ? "-" : cocktail.strMeasure2)</td></tr>
                            }
                            @if (!string.IsNullOrEmpty(cocktail.strIngredient3))
