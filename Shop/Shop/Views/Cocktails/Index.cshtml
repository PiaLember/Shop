                            }
                            @if (!string.IsNullOrEmpty(cocktail.strIngredient5))
                            {
                                <tr><td>@cocktail.strIngredient5</td><td>@(string.IsNullOrEmpty(cocktail.strMeasure5) ? "-" : cocktail.strMeasure5)</td></tr>
                            }
                            @if (!string.IsNullOrEmpty(cocktail.strIngredient6))
                            {
                                <tr><td>@cocktail.strIngredient6</td><td>@(string.IsNullOrEmpty(cocktail.strMeasure6) ? "-" : cocktail.strMeasure6)</td></tr>
                            }
                            @if (!string.IsNullOrEmpty(cocktail.strIngredient7))
