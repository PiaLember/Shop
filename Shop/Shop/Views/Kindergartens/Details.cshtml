@model Shop.Models.Kindergartens.KindergartenDetailsViewModel
    
<div class="taust">
    <h1>Details</h1>
    <div>
        <h4>Kindergartens</h4>
        <hr />
        <dl class="row">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2">Id:</label>
                @Html.DisplayFor(model => model.Id)
            </div>
            <div class="form-group row">
                <label asp-for="KindergartenName" class="col-sm-2">Kindergarten Name:</label>
                @Html.DisplayFor(model => model.KindergartenName)
            </div>
            <div class="form-group row">
                <label asp-for="GroupName" class="col-sm-2">Group Name:</label>
                @Html.DisplayFor(model => model.GroupName)
            </div>
            <div class="form-group row">
                <label asp-for="ChildrenCount" class="col-sm-2">Children Count:</label>
                @Html.DisplayFor(model => model.ChildrenCount)
            </div>
            <div class="form-group row">
                <label asp-for="Teacher" class="col-sm-2">Teacher:</label>
                @Html.DisplayFor(model => model.Teacher)
            </div>
            <div class="form-group row">
                <label asp-for="CreatedAt" class="col-sm-2">Created At:</label>
                @Html.DisplayFor(model => model.CreatedAt)
            </div>
            <div class="form-group row">
                <label asp-for="UpdatedAt" class="col-sm-2">Updated At:</label>
                @Html.DisplayFor(model => model.UpdatedAt)
            </div>

            @foreach (var images in Model.Image)
            {
                <partial name="_Images" model="images" />
            }
        </dl>
        <a asp-action="Index" asp-controller="kindergartens" class="btn button-back">Back</a>
    </div>
</div>