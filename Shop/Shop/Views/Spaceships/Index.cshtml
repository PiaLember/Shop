@model IEnumerable<Shop.Models.Spaceships.SpaceshipsIndexViewModel>

    @{
        int rownumber = 1;
    }
    <div id="create">
    <a asp-action="create" asp-controller="Spaceships" type="submit" class="btn button-update">Create</a>
    </div>


    <div class="h1">
        Spaceships
    </div>

    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nr</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Built date</th>
                    <th scope="col">Crew</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var spaceships in Model)
                {
                    <tr>
                            <td>@rownumber</td>
                            <td>@spaceships.Name</td>
                            <td>@spaceships.Typename</td>
                            <td>@spaceships.BuiltDate</td>
                            <td>@spaceships.Crew</td>                        
                        <td>
                           <div id="buttons">
                            <a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn button-details">Details</a>
                            <a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn button-update">Update</a>
                            <a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-outline-danger">Delete</a>
                           </div>
                        </td>
                    </tr>

                    rownumber += 1;
                }
            </tbody>
        </table>
    </form>

