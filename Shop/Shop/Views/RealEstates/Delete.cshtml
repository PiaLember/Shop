@model Shop.Models.RealEstates.RealEstateDeleteViewModel
<div class="taust">
    <h1>Delete</h1>

    <div>
        <h4>RealEstates</h4>
        <hr />
        <dl class="row">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2"></label>
                @Html.DisplayFor(model => model.Id)
            </div>

            <div class="form-group row">
                <label asp-for="Location" class="col-sm-2"></label>
                @Html.DisplayFor(model => model.Location)
            </div>

            <div class="form-group row">
                <label asp-for="Size" class="col-sm-2"></label>
                @Html.DisplayFor(model => model.Size)
            </div>

            <div class="form-group row">
                <label asp-for="RoomNumber" class="col-sm-2"></label>
                @Html.DisplayFor(model => model.RoomNumber)
            </div>

            <div class="form-group row">
                <label asp-for="BuildingType" class="col-sm-2"></label>
                @Html.DisplayFor(model => model.BuildingType)
            </div>

            <div class="form-group row">
                <label asp-for="CreatedAt" class="col-sm-2"></label>
                @Html.DisplayFor(model => model.CreatedAt)
            </div>

            <div class="form-group row">
                <label asp-for="UpdatedAt" class="col-sm-2"></label>
                @Html.DisplayFor(model => model.UpdatedAt)
            </div>
        </dl>

        @foreach (var images in Model.Image)
        {
            <partial name="_Images" model="images" />
        }

        <form asp-action="DeleteConfirmation">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" asp-controller="realestates" class="btn button-back">Back</a>
        </form>
    </div>
</div>
